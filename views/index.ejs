<% include _header %>

<h1>Welcome</h1>

<% users.forEach(function(user) { %>
  <div class="card text-center">

    <div class="card-body">
      <h5 class="card-title"><%= user.getName() %></h5>    
      <% if (user.bio) { %> 
        <p class="card-text"><%= user.bio %></p>
      <% } %>
      <a href="/users/<%= user.username %>" class="btn btn-primary">
        <%= user.getName() %>
      </a>
    </div>
    <div class="card-footer text-muted">
      <%= user.createdAt %>  
    </div>
  </div>
<% }) %>

<% include _footer %>
