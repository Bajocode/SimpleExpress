<% include _header %>

<% if ((currentUser) && (currentUser.id === user.id)) { %>
<a href="/users/<%= user.username %>/edit" class="pull-right">Edit profile</a>
<% } %>

<h1><%= user.getName() %></h1>
<h2>Joined on <%= user.createdAt %></h2>

<% if (user.bio) { %>
  <p><%= user.bio %></p>
<% } %>

<% include _footer %>
